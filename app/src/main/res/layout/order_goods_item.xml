<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="77dp"
    android:background="#f3f3f3">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/order_item_goods_head"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_centerVertical="true"
        fresco:placeholderImage="@mipmap/head_icon"
        fresco:placeholderImageScaleType="fitXY" />

    <TextView
        android:id="@+id/order_item_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品名称"
        android:layout_toEndOf="@+id/order_item_goods_head"
        android:layout_marginTop="8dp"
        android:layout_marginStart="9dp"/>
    <TextView
        android:id="@+id/order_item_goods_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_item_goods_name"
        android:layout_alignStart="@+id/order_item_goods_name"
        android:layout_marginTop="2dp"
        android:textSize="@dimen/dimens_12sp"
        android:text="商品品牌"
        />
    <TextView
        android:id="@+id/order_item_goods_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="100"
        android:layout_alignTop="@+id/order_item_goods_name"
        android:layout_marginEnd="11dp" />
    <TextView
        android:id="@+id/order_item_goods_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/order_item_goods_money"
        android:layout_alignTop="@+id/order_item_goods_brand"
        android:text="100"
        />

    <TextView
        android:id="@+id/order_item_goods_color_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="颜色分类:"
        android:textColor="@color/common_gray"
        android:layout_alignStart="@+id/order_item_goods_brand"/>

    <TextView
        android:id="@+id/order_item_goods_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="蓝色"
        android:layout_toEndOf="@+id/order_item_goods_color_key"
        android:textColor="@color/common_gray"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/order_item_goods_size_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="尺码:"
        android:layout_toEndOf="@+id/order_item_goods_color"
        android:layout_marginStart="20dp"
        android:textColor="@color/common_gray"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/order_item_goods_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="s"
        android:layout_toEndOf="@+id/order_item_goods_size_key"
        android:textColor="@color/common_gray"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>