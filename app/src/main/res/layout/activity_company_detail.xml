<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.gs.buluo.app.view.activity.CompanyDetailActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.youth.banner.Banner
                android:id="@+id/company_detail_banner"
                android:layout_width="match_parent"
                android:layout_height="270dp"/>
            
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/company_detail_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-30dp"
                fresco:placeholderImage="@mipmap/girl"
                fresco:roundAsCircle="true"
                fresco:placeholderImageScaleType="centerCrop"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/company_detail_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimens_11dp"
                    android:layout_marginTop="@dimen/dimens_25dp"
                    android:gravity="center"
                    android:text="北京部落公社"
                    android:textSize="@dimen/dimens_17sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/company_detail_desc"
                    android:layout_width="match_parent"
                    android:layout_height="182dp"
                    android:paddingLeft="@dimen/dimens_39dp"
                    android:paddingRight="@dimen/dimens_39dp"
                    android:text="公司简介"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/divide_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/usual_item_margin"
                android:paddingRight="@dimen/usual_item_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="42dp"
                    android:textSize="@dimen/dimens_14sp"
                    android:textStyle="bold"
                    android:text="我的信息"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_gravity="center">

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="公司名称"/>

                    <TextView
                        android:id="@+id/company_detail_name1"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="XXXXXXXX"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_gravity="center">

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="姓        名"/>

                    <TextView
                        android:id="@+id/company_detail_username"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="XXXXXXXX"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_gravity="center">

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="部        门"/>

                    <TextView
                        android:id="@+id/company_detail_department"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="XXXXXXXX"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_gravity="center">

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="职        位"/>

                    <TextView
                        android:id="@+id/company_detail_position"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="XXXXXXXX"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_gravity="center">

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="工        号"/>

                    <TextView
                        android:id="@+id/company_detail_personNum"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="XXXXXXXX"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
