<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:background="#fff"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">
        <ImageView
            android:id="@+id/register_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/back_off"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:textSize="@dimen/title_size"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <include layout="@layout/split_line_no_margin" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c9c8c8" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/register_area_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="+86"
                    android:textSize="@dimen/dimes_16sp"
                    android:paddingTop="30dp"
                    />


                <EditText
                    android:id="@+id/register_phone"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="30dp"
                    android:textSize="@dimen/dimes_16sp"
                    android:inputType="number"
                    android:background="@null"
                    android:textColor="#999999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/input_phone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:layout_toEndOf="@+id/register_area_num" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_below="@id/register_phone"
                    android:background="#c9c8c8" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/register_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/input_verify"
                    android:inputType="number"
                    android:textColor="#999999"
                    android:maxLines="1"
                    android:textSize="@dimen/dimes_16sp"
                    android:paddingTop="30dp"
                    android:singleLine="true" />

                <include layout="@layout/send_verify"
                    android:id="@+id/register_send_verify"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginRight="10dp"
                    android:background="#c9c8c8" />

                <View
                    android:id="@+id/reg_warn"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#c9c8c8"
                    android:layout_below="@id/register_code"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/register_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_password"
                    android:textColor="#999999"
                    android:textSize="@dimen/dimes_16sp"
                    android:maxLength="16"
                    android:inputType="textPassword"
                    android:background="@null"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:paddingBottom="3dp"
                    android:paddingTop="30dp"/>

                <ImageView
                    android:id="@+id/reg_pwd_view"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/pwd_unseen"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/register_password"
                    android:background="#c9c8c8" />
            </RelativeLayout>
        </LinearLayout>
    <Button
        android:id="@+id/register_button"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/text_background_round"
        android:text="@string/register"
        android:textColor="#000"
        android:layout_gravity="center"
        android:enabled="false" />
    <ProgressBar
        android:id="@+id/register_progressBar"
        android:layout_marginTop="-30dp"
        android:layout_marginStart="40dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <include layout="@layout/user_deal"/>

</LinearLayout>

