<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
        <LinearLayout
            android:layout_above="@+id/service_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="商家名称"
                android:textColor="#000"
                android:textSize="@dimen/dimens_22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:contextClickable="false"
                    android:text="种类"
                    android:textColor="#3d3d3d"
                    android:textSize="@dimen/dimens_18sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:background="@color/divide_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="地点"
                    android:textColor="#3d3d3d"
                    android:textSize="@dimen/dimens_18sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:background="@color/divide_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:text="距离"
                    android:textColor="#3d3d3d"
                    android:textSize="@dimen/dimens_18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="100"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="元/人" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginStart="28dp"
                    android:src="@mipmap/collect" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="10000已收藏" />
            </LinearLayout>

            <include layout="@layout/split_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/service_shop_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址"
                    android:textColor="#3d3d3d"
                    android:textSize="@dimen/dimens_18sp" />

                <TextView
                    android:id="@+id/service_shop_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/service_shop_address"
                    android:layout_marginTop="10dp"
                    android:text="1234567789"
                    android:textColor="#3d3d3d"
                    android:textSize="@dimen/dimens_18sp" />

                <TextView
                    android:id="@+id/service_location"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:background="@mipmap/location" />

                <TextView
                    android:id="@+id/service_phone_call"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/service_shop_number"
                    android:background="@mipmap/phone" />
            </RelativeLayout>

            <include layout="@layout/split_line" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/thumb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐理由"
                    android:textColor="#000"
                    android:textSize="@dimen/dimens_20sp" />
            </LinearLayout>

            <TextView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="硕大的撒大大所多的啊大额奥飞嘎达法大大说的玩的阿斯达无多无大哇大大无多"
                android:textSize="@dimen/dimens_18sp" />

            <include layout="@layout/split_line" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/shop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="餐厅话题"
                    android:textColor="#000"
                    android:textSize="@dimen/dimens_20sp" />
            </LinearLayout>


            <TextView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="硕大的撒大大所多"
                android:textSize="@dimen/dimens_18sp" />

            <include layout="@layout/split_line" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/reminder" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="温馨提示"
                    android:textColor="#000"
                    android:textSize="@dimen/dimens_20sp" />
            </LinearLayout>


            <TextView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="硕大的撒大大所多"
                android:textSize="@dimen/dimens_18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="20dp"
                android:text="时间" />

            <include layout="@layout/split_area" />

            <LinearLayout
                android:id="@+id/service_call_server"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/phone_call" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="电话客服" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="6dp"
                    android:rotation="90"
                    android:src="@mipmap/up_colored" />
            </LinearLayout>

            <include layout="@layout/split_area" />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/service_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:id="@+id/service_booking_food"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/custom_color_shallow"
            android:gravity="center"
            android:text="外卖订餐"
            android:textColor="#fff"
            android:textSize="@dimen/dimens_20sp" />

        <TextView
            android:id="@+id/service_booking_seat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/custom_color"
            android:gravity="center"
            android:text="预定餐位"
            android:textColor="#fff"
            android:textSize="@dimen/dimens_20sp" />
    </LinearLayout>
</LinearLayout>