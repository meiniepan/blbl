<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="#2A2A2A">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#fff"
            android:text="@string/detail_address"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#000"/>

        <include layout="@layout/back_img_white"
            android:id="@+id/add_address_back"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="收货人    "
            android:textSize="@dimen/dimens_20sp"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"/>


        <EditText
            android:id="@+id/et_address_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:hint="@string/name"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/phone"
            android:textSize="@dimen/dimens_20sp"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"/>


        <EditText
            android:id="@+id/et_address_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="phone"
            android:layout_marginStart="30dp"
            android:hint="@string/input_phone"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="选择地区"
            android:textSize="@dimen/dimens_20sp"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"/>


        <TextView
            android:id="@+id/tv_address_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:gravity="center_vertical"
            android:text="请选择地区"
            android:textSize="@dimen/dimens_18sp"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="详细地址"
            android:textSize="@dimen/dimens_20sp"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"/>


        <EditText
            android:id="@+id/et_address_area_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:hint="@string/detail_street_info"
            android:background="@null"/>
    </LinearLayout>
