<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="#fff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
         android:background="#2A2A2A">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#fff"
            android:text="@string/self_info"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#000"/>

        <include layout="@layout/back_img_white"
            android:id="@+id/self_back"/>
    </RelativeLayout>

    <include layout="@layout/split_area"/>
    <RelativeLayout
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/head"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:textSize="18sp"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/self_iv_head"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            fresco:placeholderImage="@mipmap/head_icon"
            fresco:roundAsCircle="true"
            fresco:placeholderImageScaleType="fitXY"/>
    </RelativeLayout>

    <include layout="@layout/split_line" />

    <RelativeLayout
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:id="@+id/ll_nickname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/self_item_height"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/nickname"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#b5b5b5"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/self_margin_end"
            android:textSize="16sp"/>
    </RelativeLayout>

    <include layout="@layout/split_line" />

    <RelativeLayout
        android:id="@+id/ll_sex"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/self_item_height"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/sex"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:textColor="#b5b5b5"
            android:layout_marginEnd="@dimen/self_margin_end"
            android:textSize="16sp"/>
    </RelativeLayout>

    <include layout="@layout/split_line" />

    <RelativeLayout
        android:id="@+id/ll_birthday"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/self_item_height"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/birthday"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_birthday"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:textColor="#b5b5b5"
            android:layout_marginEnd="@dimen/self_margin_end"
            android:textSize="16sp"/>
    </RelativeLayout>

    <include layout="@layout/split_line" />

    <RelativeLayout
        android:id="@+id/ll_motion"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/self_item_height"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/motion"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_motion"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#b5b5b5"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/self_margin_end"
            android:textSize="16sp"/>
    </RelativeLayout>

    <include layout="@layout/split_area" />

    <RelativeLayout
        android:id="@+id/ll_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/self_item_height"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/number"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#b5b5b5"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/self_margin_end"
            android:textSize="16sp"/>
    </RelativeLayout>

    <include layout="@layout/split_line" />

    <RelativeLayout
        android:id="@+id/ll_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/self_item_height"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/address"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#b5b5b5"
            android:ellipsize="start"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/self_margin_end"
            android:textSize="16sp"/>
    </RelativeLayout>

    <include layout="@layout/split_line" />

    <RelativeLayout
        android:id="@+id/ll_detail_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/self_item_height"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/detail_address"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_detail_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#b5b5b5"
            android:ellipsize="end"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/self_margin_end"
            android:textSize="16sp"/>
    </RelativeLayout>

    <include layout="@layout/split_line" />
</LinearLayout>