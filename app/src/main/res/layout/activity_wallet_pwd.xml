<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="#2A2A2A">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/title_size"
            android:textColor="#fff"
            android:text="@string/pay_pwd"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#000"/>

        <include layout="@layout/back_img_white"
            android:id="@+id/wallet_pwd_back"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin">
        <TextView
            android:id="@+id/wallet_pwd_sign"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/dimens_20sp"
            android:text="@string/input_pay_pwd"/>
    </LinearLayout>

    <com.gs.buluo.app.view.widget.PwdEditText
        android:layout_marginTop="20dp"
        android:id="@+id/wallet_pwd_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin">
    </com.gs.buluo.app.view.widget.PwdEditText>
    <TextView
        android:id="@+id/wallet_pwd_continue"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@color/custom_color"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_marginTop="60dp"
        android:textSize="@dimen/dimens_18sp"
        android:text="@string/go_on"/>
</LinearLayout>