<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="160dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="175dp"
        android:layout_height="130dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImage="@mipmap/girl2"
        fresco:placeholderImageScaleType="focusCrop"
        android:id="@+id/food_list_head" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="店铺名"
        android:textSize="@dimen/dimens_20sp"
        android:textColor="#000"
        android:layout_alignTop="@+id/food_list_head"
        android:layout_toEndOf="@+id/food_list_head"
        android:layout_marginStart="17dp"
        android:id="@+id/food_shop_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="店铺地址"
        android:textColor="#90000000"
        android:layout_marginStart="17dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/food_shop_name"
        android:layout_toEndOf="@+id/food_list_head"
        android:id="@+id/food_shop_address" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/food_seat"
        android:layout_alignBottom="@+id/food_list_head"
        android:layout_alignStart="@+id/food_price"
        android:id="@+id/food_book_seat" />
    <ImageView
        android:id="@+id/food_book_room"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/food_home"
        android:layout_alignTop="@+id/food_book_seat"
        android:layout_alignEnd="@+id/food_shop_name" />
    <TextView
        android:id="@+id/food_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimens_20sp"
        android:text="96元/人"
        android:textColor="#000"
        android:layout_above="@+id/food_book_seat"
        android:layout_alignEnd="@+id/food_shop_address"
        android:layout_marginBottom="6dp"/>

</RelativeLayout>