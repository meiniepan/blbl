<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="#2A2A2A">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/order_detail"
            android:textColor="#fff"
            android:textSize="@dimen/title_size" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#000" />

        <include
            android:id="@+id/order_detail_back"
            layout="@layout/back_img_white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@mipmap/order_top_bg">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_marginStart="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimens_14sp"
                    android:textColor="@color/common_dark"
                    android:textStyle="bold"
                    android:text="收货人 : "/>
                <TextView
                    android:id="@+id/order_detail_receiver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/dimens_14sp"
                    android:textColor="@color/common_dark"
                    android:text="张三"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimens_14sp"
                    android:textStyle="bold"
                    android:textColor="@color/common_dark"
                    android:layout_marginStart="60dp"
                    android:text="12312311313"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/order_address_icon"/>
                <TextView
                    android:layout_marginStart="10dp"
                    android:id="@+id/order_detail_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京市长阳求四大"
                    />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/down"
                android:rotation="-90"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:text="商店名称"
            android:textSize="@dimen/dimens_12sp"
            android:gravity="center_vertical"
            android:textColor="@color/common_dark"
            android:textStyle="bold" />
        <include layout="@layout/split_line_no_margin_common"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:background="#f3f3f3">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/order_detail_goods_head"
                android:layout_width="79dp"
                android:layout_height="79dp"
                android:layout_centerVertical="true"
                fresco:placeholderImage="@mipmap/head_icon"
                fresco:placeholderImageScaleType="fitXY" />

            <TextView
                android:id="@+id/order_detail_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名称"
                android:layout_toEndOf="@+id/order_detail_goods_head"
                android:layout_marginTop="8dp"
                android:layout_marginStart="9dp"/>
            <TextView
                android:id="@+id/order_detail_goods_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_detail_goods_name"
                android:layout_alignStart="@+id/order_detail_goods_name"
                android:layout_marginTop="2dp"
                android:textSize="@dimen/dimens_12sp"
                android:text="商品品牌"
                />
            <TextView
                android:id="@+id/order_detail_goods_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/common_dark"
                android:textStyle="bold"
                android:text="100"
                android:layout_alignTop="@+id/order_detail_goods_name"
                android:layout_marginEnd="11dp" />

            <TextView
                android:id="@+id/order_item_goods_color_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:text="颜色分类:"
                android:textColor="@color/common_gray"
                android:layout_alignStart="@+id/order_detail_goods_brand"/>

            <TextView
                android:id="@+id/order_detail_goods_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="蓝色"
                android:layout_toEndOf="@+id/order_item_goods_color_key"
                android:textColor="@color/common_gray"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/order_item_goods_size_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="尺码:"
                android:layout_toEndOf="@+id/order_detail_goods_color"
                android:layout_marginStart="20dp"
                android:textColor="@color/common_gray"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/order_detail_goods_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="s"
                android:layout_toEndOf="@+id/order_item_goods_size_key"
                android:textColor="@color/common_gray"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                />
        </RelativeLayout>
        <include layout="@layout/split_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/dimens_12sp"
                android:text="@string/send_method"/>
            <TextView
                android:id="@+id/order_send_method"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/dimens_12sp"
                android:text="包邮"
                android:gravity="end|center_vertical"/>
        </LinearLayout>
        <include layout="@layout/split_line_no_margin_common"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/dimens_12sp"
                android:text="@string/send_money"/>
            <TextView
                android:id="@+id/order_send_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/dimens_12sp"
                android:text="0.00"
                android:gravity="end|center_vertical"/>
        </LinearLayout>
        <include layout="@layout/split_line_no_margin_common"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/dimens_12sp"
                android:text="@string/total_price"/>
            <TextView
                android:id="@+id/order_price_total"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/dimens_12sp"
                android:text="0.00"
                android:gravity="end|center_vertical"/>
        </LinearLayout>

        <EditText
            android:layout_marginBottom="17dp"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:hint="订单补充说明"
            android:textSize="12sp"
            android:background="@color/tint_bg"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/tint_bg"/>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimens_12sp"
            android:textColor="@color/common_gray"
            android:text="@string/order_number"/>

        <TextView
            android:id="@+id/order_detail_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimens_12sp"
            android:textColor="@color/common_gray"
            android:text="1312321321312"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_gray"
            android:textSize="@dimen/dimens_12sp"
            android:text="@string/create_time"/>

        <TextView
            android:id="@+id/order_detail_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimens_12sp"
            android:textColor="@color/common_gray"
            android:text="1312321321312"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <LinearLayout
            android:id="@+id/order_bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimens_14sp"
                android:text="@string/pay_account"/>
            <TextView
                android:id="@+id/order_pay_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/custom_color"
                android:text="1111"
                android:textSize="@dimen/dimens_14sp"/>
            <RelativeLayout
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@color/custom_color"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="@string/wait_pay"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_alignTop="@+id/order_bottom"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/custom_color"
            />
    </RelativeLayout>

</LinearLayout>