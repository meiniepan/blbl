<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:clipToPadding="true"
                android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/open_door_bg"
        >

        <com.gs.buluo.app.view.widget.RippleView
            android:id="@+id/open_door_rippleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:paddingTop="320dp"
            >

            <TextView
                android:id="@+id/open_door_text"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="开锁"
                android:textColor="@color/ios_text"
                android:textSize="21sp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/open_door_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/open_door_rippleView"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:padding="10dp"
            android:src="@mipmap/open_door_down"
            />

    </RelativeLayout>


</RelativeLayout>
